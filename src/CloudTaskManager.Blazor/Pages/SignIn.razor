@page "/signin"
@using Blazored.LocalStorage

@inject NavigationManager Nav
@inject ILocalStorageService LocalStorage

<h3>Sign In</h3>

<div class="space-y-4">
    <input @bind="_username" placeholder="Enter username" class="border p-2 rounded" />
    <button class="bg-blue-600 text-white px-4 py-2 rounded" @onclick="OnSignIn">
        Sign In
    </button>
</div>

@code {
    private string _username = string.Empty;

    private void OnSignIn()
    {
        if (string.IsNullOrWhiteSpace(_username)) return;

        // Store in local storage (simplest approach)
        LocalStorage.SetItemAsync("userId", _username);

        // Navigate to dashboard
        Nav.NavigateTo("/");
    }
}