@inherits LayoutComponentBase

<MudThemeProvider/>
<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudText Typo="Typo.h6">Cloud Task Manager</MudText>
    </MudAppBar>

    <MudDrawer Variant="DrawerVariant.Temporary" Anchor="Anchor.Start" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Dashboard</MudNavLink>
            <MudNavLink Href="/boards" Icon="@Icons.Material.Filled.ViewKanban">Boards</MudNavLink>
            <MudNavLink Href="/tasks" Icon="@Icons.Material.Filled.List">Tasks</MudNavLink>
            <MudNavLink Href="/reminders" Icon="@Icons.Material.Filled.Alarm">Reminders</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>